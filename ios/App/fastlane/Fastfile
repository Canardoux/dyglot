default_platform(:ios)

platform :ios do
  desc "Build and upload to TestFlight"
  lane :beta do
    # Use App Store Connect API key (no 2FA, no interactive login)
    api_key = app_store_connect_api_key(
      key_id: ENV["ASC_KEY_ID"],
      issuer_id: ENV["ASC_ISSUER_ID"],
      key_content: ENV["ASC_KEY_P8"],
      is_key_content_base64: true
    )

    # Always bump build number (TestFlight requires a new build each upload)
    # Uses timestamp to guarantee uniqueness.
    increment_build_number(
      build_number: Time.now.strftime("%Y%m%d%H%M")
    )

    profile_path = "/System/Volumes/Data/Users/#{ENV['USER']}/Library/MobileDevice/Provisioning Profiles/Dyglot_AppStore.mobileprovision"

    # Build the iOS app.
    # The scheme is usually "App" for Capacitor projects.
    build_app(
      scheme: "App",
      clean: true,
      export_method: "app-store",
      # export_options: {
      #   signingStyle: "automatic",
      #   provisioningProfiles: {
      #     #"xyz.canardoux.dyglot" => "Apple Distribution: Laurent Aries (5YY4QLF92X)"
      #     "xyz.canardoux.dyglot" => "Dyglot AppStore"
      #   } 
      # },
      xcargs: "-allowProvisioningUpdates"
    )    # Upload to TestFlight
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: false
    )
  end
end