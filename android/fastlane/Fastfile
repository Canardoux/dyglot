default_platform(:android)

platform :android do
  desc "Build web, sync capacitor, build AAB, upload to Play Internal"
  lane :beta do
    sh("cd .. && npm run android:sync")

    gradle(
      task: "bundle",
      build_type: "Release",
      project_dir: "."
    )

    upload_to_play_store(
      aab: "app/build/outputs/bundle/release/app-release.aab",
      track: "internal",
      skip_upload_metadata: true,
      skip_upload_images: true,
      skip_upload_screenshots: true
    )
  end
end